<h1><%= @cocktail.name %></h1>
<div class="description">
  <h2>Description</h2>
</div>
<div class="ingredients">
  <h2>Ingredients</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> of <%= dose.ingredient.name %>
        <%= link_to 'delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
  </ul>
